# Self-hosted Supabase endpoint (NAS)
PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Optional S3-compatible storage
AWS_REGION=eu-west-3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Auth providers
PUBLIC_ENABLE_DISCORD_AUTH=true
PUBLIC_ENABLE_TWITCH_AUTH=false
PUBLIC_ENABLE_GOOGLE_AUTH=false

PUBLIC_SHOW_FULL_LOCATION_DETAILS=false

# Must match the public URL exposed by your NAS reverse proxy
PUBLIC_OAUTH_REDIRECT_URL=http://127.0.0.1:4173
