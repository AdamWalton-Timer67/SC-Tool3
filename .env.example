# Local auth/data service via MariaDB (required for live deployments)
MARIADB_HOST=mariadb
MARIADB_PORT=3306
MARIADB_USER=wikelo
MARIADB_PASSWORD=changeme
MARIADB_DATABASE=wikelo
MARIADB_CONNECTION_LIMIT=10

# MariaDB container bootstrap (used by deploy/nas/docker-compose.yml)
MARIADB_ROOT_PASSWORD=rootchangeme

# Auth providers
PUBLIC_ENABLE_DISCORD_AUTH=false
PUBLIC_ENABLE_TWITCH_AUTH=false
PUBLIC_ENABLE_GOOGLE_AUTH=false

PUBLIC_SHOW_FULL_LOCATION_DETAILS=false

# Must match the public URL exposed by your reverse proxy
PUBLIC_OAUTH_REDIRECT_URL=http://127.0.0.1:4173

# Public origin used by SvelteKit server-side CSRF checks
ORIGIN=http://127.0.0.1:4173

# Optional comma-separated allowlist for additional public origins accepted for POST CSRF checks
CSRF_TRUSTED_ORIGINS=http://localhost:4173,http://127.0.0.1:4173
